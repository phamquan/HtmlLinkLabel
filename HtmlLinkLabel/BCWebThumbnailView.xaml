<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HtmlLinkLabel.BCWebThumbnailView">
    <StackLayout
        Spacing="5"
        Orientation="Horizontal">
        <Image
            Margin="5"
            BackgroundColor="White"
            WidthRequest="100"
            HeightRequest="100"
            Source="{Binding ImageUrl}" />
        <StackLayout VerticalOptions="FillAndExpand" Orientation="Vertical" BackgroundColor="#EEEEEE" Padding="5" >
            <Label Text="{Binding UrlText}" FontSize="Micro" />
            <Label Text="{Binding TitleText}" FontAttributes="Bold" />
            <Label Text="{Binding DescriptionText}" FontSize="Micro" />
        </StackLayout>
    </StackLayout>
</ContentView>